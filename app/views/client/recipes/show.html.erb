<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1><%= @recipe["title"] %></h1>

      <h3>Chef: <%= @recipe["chef"] %></h3>
      <h5>Prep Time: <%= @recipe["formatted"]["prep_time"] %></h5>
      <h4>Ingredients: </h4>
      <ul>
        <% @recipe["formatted"]["ingredients"].each do |ingredient| %>
          <li><%= ingredient %></li>
        <% end %>
      </ul>
      <h4>Directions:</h4>
      <ol>
      <% @recipe["formatted"]["directions"].each do |direction| %>
        <li><%= direction %></li>
        <% end %>
      </ol>
      <div>
        <a href="/client/recipes/<%= @recipe['id'] %>/edit">Edit</a>
        <a href="/client/recipes/<%= @recipe['id'] %>" data-method="delete">Delete</a>
      </div>
    </div>

    <div class="col-md-6">
      <img src="<%= @recipe["image_url"] %>">    
    </div>
  <!--   <form action="/client/recipes/<%# @recipe[#'id'] %>" method="delete">
      <input type="submit" value="Delete">
    </form> -->
  </div>
</div>
